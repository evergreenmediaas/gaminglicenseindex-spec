{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gaminglicenseindex.org/schemas/regulator.schema.json",
  "title": "Regulator",
  "description": "A gambling regulatory authority",
  "type": "object",
  "required": [
    "id",
    "slug",
    "name",
    "country",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the regulator"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "description": "URL-safe identifier (e.g., 'mga', 'ukgc')"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Official name of the regulatory authority"
    },
    "country": {
      "type": "string",
      "minLength": 2,
      "description": "Country where regulator operates (ISO 3166-1 alpha-2 or full name)"
    },
    "official_url": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Official website of the regulator"
    },
    "last_synced_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 timestamp of last data synchronization"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of record creation"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last record update"
    }
  },
  "additionalProperties": false
}
