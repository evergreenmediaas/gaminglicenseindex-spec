{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gaminglicenseindex.org/schemas/operator.schema.json",
  "title": "Operator",
  "description": "A gambling operator entity",
  "type": "object",
  "required": [
    "id",
    "legal_name",
    "normalized_name",
    "country_of_registration",
    "operator_status",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the operator"
    },
    "legal_name": {
      "type": "string",
      "minLength": 1,
      "description": "Official legal name of the operator entity"
    },
    "normalized_name": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "description": "URL-safe normalized identifier"
    },
    "country_of_registration": {
      "type": "string",
      "minLength": 2,
      "description": "Country where operator is registered"
    },
    "operator_status": {
      "type": "string",
      "enum": ["REGISTERED", "LISTED", "UNCLEAR"],
      "description": "Operator verification status"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of record creation"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last record update"
    }
  },
  "additionalProperties": false
}
